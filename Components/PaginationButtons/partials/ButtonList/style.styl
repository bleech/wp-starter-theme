@import '../../_config.styl'

.buttonList
  clearfix()
  column(1/3, $gutter: 2)
  list-style: none
  margin: 0
  min-height: 1px
  padding: 0
  text-align: center

  &-item
    display: inline-block

  &-link
    display: block
    margin: 0 5px
