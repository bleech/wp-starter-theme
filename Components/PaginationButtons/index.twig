<div is="flynt-pagination-buttons" class="flyntComponent">
  <div class="paginationButtons">
    <div class="paginationButtons-prevWrapper">
      {% if pagination.prev %}
        <a href="{{ pagination.prev.link | trim('/') }}" class="paginationButtons-prevButton btn btn-primary">{{ previousLabel }}</a>
      {% endif %}
    </div>
    <div class="paginationButtons-nextWrapper">
      {% if pagination.next %}
        <a href="{{ pagination.next.link | trim('/') }}" class="paginationButtons-nextButton btn btn-primary">{{ nextLabel }}</a>
      {% endif %}
    </div>
  </div>
</div>
