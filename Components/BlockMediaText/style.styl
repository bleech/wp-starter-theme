$rupture.scale = lookup('$globalRuptureScale') || (0 575px 767px 991px 1199px)
$rupture.anti-overlap = lookup('$globalRuptureAntiOverlap') || -1px
$gutterWidth = lookup('$globalGutterWidth') || 15px
$containerMaxWidth = lookup('$globalContainerMaxWidth') || 1140px

.flyntComponent[is='flynt-block-media-text']
  *,
  *:before,
  *:after
    box-sizing: border-box

  .blockMediaText
    center($containerMaxWidth, $gutterWidth)

    &-columnMedia,
    &-columnContentHtml
      column(1/2, $gutter: 2)

      +below('s')
        stack()

    &--mediaRight
      .blockMediaText-columnMedia
        move(1/2, $gutter: 2)

      .blockMediaText-columnContentHtml
        move(-1/2, $gutter: 2)

      .blockMediaText-columnMedia,
      .blockMediaText-columnContentHtml
        +below('s')
          unmove()

    @import 'Partials/Image/_style.styl'
    @import 'Partials/OembedVideo/_style.styl'
