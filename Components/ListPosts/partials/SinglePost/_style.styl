@import '../../_config.styl'

.singlePost
  margin: 30px 0

  &:first-child
    margin-top: 0

  &:last-child
    margin-bottom: 0

  &-content
    overflow: hidden
    zoom: 1

  &-thumbnailWrapper
    display: table-cell
    padding-right: 15px
    vertical-align: top

    +below('s')
      display: block
      margin: 0 auto 15px

  &-contentWrapper
    display: table-cell
    vertical-align: top
    width: 1000000px

    +below('s')
      display: block
      width: 100%
