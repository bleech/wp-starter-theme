{% if post.tags %}
  <div class="tags">
    <span class="tags-label">{{ labelTags }}: </span>
    <ul class="tags-list">
      {% for tag in post.tags %}
        <li class="tags-item">
          <a href="{{ tag.link }}" class="tags-tag">{{ tag.name }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>
{% endif %}
