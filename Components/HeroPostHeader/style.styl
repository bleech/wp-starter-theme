$rupture.scale = lookup('$globalLayoutScale') || (0 575px 767px 991px 1199px)
$rupture.anti-overlap = lookup('$globalLayoutOverlap') || -1px
$containerPadding = lookup('$globalLayoutContainerPadding') || 15px
$containerMaxWidth = lookup('$globalLayoutContainerMaxWidth') || 1140px

.flyntComponent[is="flynt-hero-post-header"]
  *,
  *:before,
  *:after
    box-sizing: border-box

  .postHeader
    center($containerMaxWidth, $containerPadding)

    &-metaRow
      clearfix()

    &-metaField
      &:not(:last-child)
        margin-right: 15px

      +above('m')
        float: left
        max-width: 20%

      +above('s')
        max-width: 33.333%

  @import "./Partials/Categories/_style"
  @import "./Partials/Share/_style"
  @import "./Partials/Tags/_style"
