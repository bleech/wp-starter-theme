<!DOCTYPE html>
<html class="no-js {{ body_class }}" lang="{{ site.language }}" dir="{{ dir }}" is="wps-main-layout">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">
    <meta name="url" content="{{ pageUrl }}" />
    <meta name="mobile-web-app-capable" content="yes">

    {% if androidThemeColor %}
      <meta name="theme-color" content="{{ androidThemeColor }}">
    {% endif %}

    <link rel="alternate" type="application/rss+xml" title="{{ feedTitle }}" href="{{ site.rss2 | e('esc_url') }}">

    {% for favicon in favicons %}
      <link href="{{ favicon.url | e('esc_url') }}" rel="shortcut icon" type="image/png" sizes="{{ favicon.size }}">
    {% endfor %}

    {% for touchIcon in touchIcons %}
      <link rel="apple-touch-icon" href="{{ touchIcon.url }}" sizes="{{ touchIcon.size }}">
    {% endfor %}

    {{ wp_head }}
  </head>
  <body role="document">
    {{ area('mainTemplate') }}
    {{ wp_footer }}
  </body>
</html>
