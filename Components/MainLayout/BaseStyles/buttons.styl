[is='wps-main-layout']
  .btn-primary
    background-color: $color-brand
    color: $color-text

    &:hover
      background-color: $color-brand
      text-decoration: none

  .btn
    border-radius: 5px
    border: 1px solid
    margin: 5px 0
    padding: 10px 14px
    transition: background-color .3s ease

    &.--block
      display: block
      text-align: center

    &:focus,
    &:active
      box-shadow: none
      outline: 0
